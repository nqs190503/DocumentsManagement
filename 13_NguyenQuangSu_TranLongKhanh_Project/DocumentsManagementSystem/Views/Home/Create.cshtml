@{
}
@model CreateViewModel
<form action="create" method="post">

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="name" asp-for="FileName">File Name:</label>
                    <input name="FileName" type="text" class="form-control"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="editTextArea" asp-for="FileContent">Content:</label>
                    <textarea name="FileContent" id="editTextArea" class="form-control" rows="8"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <input id="Submit1" type="Submit" class="btn btn-primary" value="Save" />
            </div>
            <div class="col-md-6">
                <button asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</button>
            </div>
        </div>
    </div>
</form>
<div>@ViewBag.CreateFailed</div>