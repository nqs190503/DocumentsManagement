@{

}
@model LoginViewModel 

<h2 class="text-center">Login</h2>
<div class="row">
    <div class="col-md-6">
        <div class="jumbotron">
            <form role="form" asp-action="Index" asp-controller="Login" method="post">
                <div class="form-group">
                    <label for="Email">User Name</label>
                    <input type="email" name="Email" asp-for="Email" autocomplete="off" class="form-control input-sm" placeholder="Email Address">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="submit" value="Login" class="btn btn-info btn-block">
                <div>New user?<a asp-action="register" asp-controller="login">Register here</a></div>
            </form>
            <div>@ViewBag.LoginFailed</div>
        </div>
    </div>

</div>